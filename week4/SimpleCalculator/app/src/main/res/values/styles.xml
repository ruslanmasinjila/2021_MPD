<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name = "WRAP_CONTENT_ALL">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name = "MATCH_PARENT_ALL">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="textViewLABEL" parent="@style/WRAP_CONTENT_ALL">
        <item name="android:gravity">left</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="editTextINPUT" parent="@style/WRAP_CONTENT_ALL">
        <item name="android:gravity">center</item>
        <item name="android:ems">5</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textSize">24sp</item>
    </style>


    <style name="button" parent="@style/WRAP_CONTENT_ALL">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="LinearHorizontalLayout" parent="@style/MATCH_PARENT_ALL">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>



</resources>