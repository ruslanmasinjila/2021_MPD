<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.25"
        android:orientation="vertical">

        <LinearLayout
            style="@style/LinearHorizontalLayout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewHEADER"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Calculate Area of the Rectangle"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            style="@style/LinearHorizontalLayout"
            android:orientation="vertical">

            <LinearLayout
                style="@style/LinearHorizontalLayout"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewLENGTH_LABEL"
                    style="@style/textViewLABEL"
                    android:text="LENGTH (cm):" />

                <EditText
                    android:id="@+id/editTextLENGTH"
                    style="@style/editTextINPUT" />
            </LinearLayout>

            <LinearLayout
                style="@style/LinearHorizontalLayout"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewHEIGHT_LABEL"
                    style="@style/textViewLABEL"
                    android:text="HEIGHT (cm):" />

                <EditText
                    android:id="@+id/editTextHEIGHT"
                    style="@style/editTextINPUT" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/LinearHorizontalLayout"
            android:orientation="vertical">

            <android.widget.Button
                android:id="@+id/calculateArea"
                style="@style/button"
                android:background="@drawable/rounded_button_green"
                android:onClick="calculateArea"
                android:text="CALCULATE AREA" />
        </LinearLayout>

        <LinearLayout
            style="@style/LinearHorizontalLayout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewAREA_LABEL"
                style="@style/textViewLABEL"
                android:text="AREA(cmÂ²):" />

            <TextView
                android:id="@+id/textViewRESULT"
                style="@style/WRAP_CONTENT_ALL"
                android:background="@drawable/border"
                android:ems="5"
                android:gravity="center"
                android:text=""
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            style="@style/LinearHorizontalLayout"
            android:orientation="vertical">

            <android.widget.Button
                android:id="@+id/clearResults"
                style="@style/button"
                android:background="@drawable/rounded_button_red"
                android:onClick="clearResults"
                android:text="CLEAR RESULTS" />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>